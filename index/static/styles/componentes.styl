.Box 
	padding 0 .5em
	display flex 
	align-items center
	justify-content space-between
	border-bottom 1px solid gray 
	flex-direction column
	width 100%
	appearance none

.InputContainer 
	width 100%
	margin .5em 0
.CheckBoxContainer
	width 100%
	margin .5em 0
	display flex 
	justify-content space-between
	align-items center
.InputBool
	display flex 
	justify-content center 
	align-items center
.Checkbox
	width 100%
	margin .5em 0
	height 18px 
	width 18px
.GroupInputContainer
	width 100%
	margin .5em 0 
	display flex 
	justify-content space-between 
	align-items center 
	flex-wrap wrap
.GroupInputContainerItem
	width 45%
	margin .5em 0 
.Label 
	width 100%
	
.RadioContainer
	width 100%
	margin .5em 0
	>ul 
		margin .5em 0
		display flex
		justify-content space-between
		align-items center 
		>li 
			>label
				display flex
				justify-content space-between
				align-items center
.RadioButton 
	outline 0 
	transition .3s
	margin 0 .5em 0 0
	&:focus 
		border 1px solid #0a8ecd
		box-shadow 0 0 3px turqueza
		
.InputContainer 
	width 100%
	margin .5em 0
			
.InputComponent
	width 100%
.SelectComponent
	display flex 
	justify-content space-between
	align-items center 

	
.BoxSelect 
	background white
	border-radius 3px 
	border 1px solid gris
	box-shadow 0 0 5px black
	outline 0
	margin .5em 0
//INPUT
.InputBuscador
.InputText
.InputDate
	border 1px solid gris 
	border-radius 3px 
	box-shadow 0 0 5px black 
	font-size 1em
	height 32px 
	line-height 32px
	margin .5em 0
	outline 0 
	padding 0 .5em 
	width 100%
	transition .3s
	&:focus 
		border 1px solid #0a8ecd
		box-shadow 0 0 3px turqueza

.InputArea 
	background #fff
	border 1px solid gris 
	border-radius 3px 
	box-shadow 0 0 5px black 
	flex 1
	margin .5em 0
	font-size 1rem
	height 65px
	outline 0 
	padding .25em .5em
	width 100%
	transition .3s
	&:focus 
		border 1px solid #0a8ecd
		box-shadow 0 0 3px turqueza
		//box-shadow inset 0 2px 4px 1px rgba(10,142,205,.3)
.Select
	appearance none
	border 1px solid gris 
	border-radius 3px 
	box-shadow 0 0 5px black
	font-size 1rem
	height 32px 
	line-height 32px
	margin .5em 0
	outline 0 
	padding 0 .5em
	width 100%
    cursor pointer
	&:focus 
		border-color #0a8ecd
		box-shadow inset 0 2px 4px 0 rgba(10,142,205,.3)
.SelectValue 
	padding 0 .5em
	appearance none
	font-size 1rem
	outline 0 
	cursor default
	display flex
	justify-content space-between
	align-items center
	transition .3s
	cursor pointer
	&-Show
		padding 0 .2em
		line-height 32px
		text-overflow ellipsis
		overflow hidden
		white-space nowrap
		height 32px 
		width 100%
	&-Icono 
		font-size .65em
		line-height 32px 
		text-align center
		display block
.SelectContainer 
	background white
	padding .2em .5em 
	flex-direction column
.SearchSelectContainer
	padding .5em 0 0 0
.SearchSelect
	appearance none
	border 1px solid gris 
	border-radius 3px 
	box-shadow 0 0 3px black 
	font-size 1em
	height 32px 
	line-height 32px
	outline 0 
	padding 0 .5em 
	width 100%
.OrderListContainer 
	margin .5em 0
.OrderList
	max-height 150px
	overflow-y auto
	&-Item 
		border-radius 3px
		appearance none
		font-size 1em
		outline 0 
		width 100%
		transition .3s
		border-bottom 1px solid gray
		&-Link 
			line-height 32px
			text-align justify
			padding 0 .5em 
			color black
			display block
			transition .3s
			cursor pointer
			height 100%
			width 100%
			&:hover 
				background rgba(black, .1)
.LabelContainer
	width 100%		
//////////////////////////////////////////////////
.LabelsContainer 
	margin .5em 0
	display flex 
	width 100%
	flex-direction row
	justify-content space-between 
	align-items center 
.AccionPopup 
	display flex 
	justify-content space-between 
	align-items center 
	width 150px
	height 40px
	padding 0 .5em
	&-Add
		margin 0 .5em
	&-Add
	&-Edit 
	&-Search
		box-shadow 0 0 3px black
		text-align center
		line-height 32px 
		border-radius 3px
		display block
		width 32px 
		height 32px 
		font-size .8em
		font-weight bolder
		transition .3s
		border 1px solid white
		&:hover 
			border-radius 50%
			border 1px solid black
			background rgba(white, .3)
.AccionSearchContainer 
	display flex 
	justify-content space-between 
	align-items center
@media screen and (min-width:480px)	
	.Box
		justify-content space-between
	.InputContainer 
		padding 0 .5em
		display flex 
		justify-content space-between
		align-items center
		width 100%
	.SelectComponent
		width 60%
	.CheckBoxContainer
		padding 0 .5em
	.GroupInputContainer
		padding 0 
		display flex 
		justify-content space-between
		align-items center
		width 100%

	.RadioContainer
		width 60%
	.LabelContainer 
		width 40%
		display flex 
		align-items center
	.InputBool
	.InputComponent
		width 60%
		display flex
		justify-content center 
		align-items center 
		flex-direction column
	
	.ContainerComponent
		display flex 
		justify-content space-between 
		align-items center 
		&-Label 
			width 40% 
		&-Element 
			width 60%
	
	.LabelContainer
		width 40%	
	#accion-popup-mobile
		display none
	.BoxSelect
		width 60%
	.OrderList 
		background white
	.OrderListContainer 
		position relative 
		&-Sub 
			position absolute
			left 0 
			right 0
	.ContainerForm
		display flex
		justify-content center 
		align-items center
		flex-direction column
		.Form 
			width 100%
			
@media screen and (min-width:1000px)
	.ContainerForm
		display flex
		justify-content center 
		align-items center
		.Form 
			width 65%
			//width 768px
