.MenuItemsAside 
	width 100%
	height 35px 
	&-Link
		font-weight bolder
		text-shadow 1px 1px 10px black
		padding 0 .5em 
		display block 
		width 100%
		height 100%
		line-height 35px
		transition .3s

		&.active 
		&:hover 
			background-color rgba(white, .3)
		    background-image linear-gradient(top, rgb(69, 199, 235), rgb(38, 152, 219))
		    border-bottom 1px solid #103c56
		    box-shadow 0px 1px 0px 0px #6ad2ef

.SubMenuItemsAside
	&-Link 
		background #fff 
		
		border-bottom 1px solid #efeff0
		font-weight bolder
		text-indent 1em 
		display block
		color black
		width 100%
		height 35px 
		line-height 35px
		display flex
		justify-content center 
		align-items center
		transition .3s
		&:hover 
			background rgba(white, .3)
